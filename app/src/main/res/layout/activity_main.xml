<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Button to check location permission -->
    <Button
        android:id="@+id/btn_location_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Location Permission" />

    <!-- Button to check storage, read media images, and audio permission -->
    <Button
        android:id="@+id/btn_media_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Media Permissions" />

</LinearLayout>